            </span>
          </div>
        </div>

        {/* Session List */}
        {isLoading ? (
          <div className="text-center py-12 text-gray-400">加载中...</div>
        ) : sessions.length > 0 ? (
          <div className="space-y-4">
            {sessions.map((session: Session) => {
              const statusInfo = statusConfig[session.status];
              const progress = session.total_tasks > 0
                ? (session.completed_tasks / session.total_tasks) * 100
                : 0;

              return (
                <div
                  key={session.id}
                  className="bg-white rounded-lg border shadow-sm p-4 hover:shadow-md transition-shadow"
                >
                  <div className="flex items-start justify-between">
                    <div className="flex-1">
                      <div className="flex items-center gap-3 mb-2">
                        <Link
                          to={`/workspace/${session.id}`}
                          className="text-lg font-semibold text-gray-900 hover:text-blue-600"
                        >
                          {session.title}
                        </Link>
                        <Badge variant={statusInfo.variant} size="sm">
                          {statusInfo.label}
                        </Badge>
                      </div>

                      <div className="text-sm text-gray-500 space-y-1">
                        <p>
                          模式: <span className="text-gray-700">{session.mode}</span>
                        </p>
                        <p>
                          进度: <span className="text-gray-700">{session.completed_tasks}/{session.total_tasks} 个任务</span>
                        </p>
                        <p>
                          创建时间: {new Date(session.created_at).toLocaleString('zh-CN')}
                        </p>
                      </div>

                      {/* Progress Bar */}
                      <div className="mt-3">
                        <div className="w-full bg-gray-200 rounded-full h-2">
                          <div
                            className="bg-blue-600 h-2 rounded-full transition-all"
                            style={{ width: `${progress}%` }}
                          />
                        </div>
                      </div>
                    </div>

                    {/* Actions */}
                    <div className="flex items-center gap-2 ml-4">
                      {session.status === 'running' && (
                        <>
